
void triml(char* buf)
{
	int len = strlen(buf);
	char * p = buf;
	for (int i = 0; i < len; i++)
	{
		if (*p == ' ' || *p == '\t')	{ p++; continue; }
		else break;
	}

	if (p == buf)	return;
	else strcpy(buf, p);
}

void test_triml()
{
	char buf[] = "	#";//"" " "

	triml( buf);

	if (buf[0] == '\0')		cout << "empty string" << endl;
	else if (buf[0] == '#')		cout << "annotation string" << endl;
	else {}
}
